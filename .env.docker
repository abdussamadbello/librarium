# Environment Variables for Docker Deployment
# Copy this file to .env when using Docker

# Database (automatically configured in docker-compose.yml)
DATABASE_URL=postgresql://librarium:librarium_password@postgres:5432/librarium

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-in-production-generate-with-openssl-rand-base64-32

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google Books API (Optional - enhances book data quality)
# Get free API key: https://console.cloud.google.com/apis/credentials
GOOGLE_BOOKS_API_KEY=

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Docker Configuration
AUTO_MIGRATE=true
AUTO_SEED=true
AUTO_IMPORT_BOOKS=true
